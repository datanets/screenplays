<!DOCTYPE html>
<html>
<head>
  <title>Screenplays</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="navbar navbar-default navbar-static-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
          </button>
          <a class="navbar-brand" href="/">Screenplays</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li><a href="#" class="dropdown-toggle" data-toggle="dropdown">Manage <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li class="menu-label"><%= link_to "Characters", :controller => :characters, :action => :index %></li>
                <li class="menu-label"><%= link_to "Screenplays", :controller => :screenplays, :action => :index %></li>
              </ul>
            </li>
            <li><a href="#" class="dropdown-toggle" data-toggle="dropdown">Settings <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li class="menu-label"><%= link_to "Block Types", :controller => :block_types, :action => :index %></li>
              </ul>
            </li>
            <li><%= link_to 'Logout', destroy_user_session_path, :method => :delete %></li>
          </ul>
        </div>
    </div>
  </div>
  <div class="container">
    <%= yield %>
    <%= render 'layouts/user_widget' %>
    <br><br><br><br>
  </div>
</body>
</html>