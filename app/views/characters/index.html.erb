<h1>Characters</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Alias</th>
      <th>Gender</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= character.alias %></td>
        <td><%= character.gender %></td>
        <td><%= link_to 'Show', character %> | 
            <%= link_to 'Edit', edit_character_path(character) %> | 
            <%= link_to 'Delete', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Character', new_character_path, :method => "get", :class => "btn" %>
